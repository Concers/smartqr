# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://smartqr:smartqr123@localhost:5432/smartqr"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Application URLs
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3001"

# QR Code Configuration
QR_BASE_URL="http://localhost:3000"
QR_ROOT_DOMAIN="netqr.io"
QR_CUSTOM_DOMAIN_ENABLED=true
QR_DOMAIN_ALIASES="your-domain.com,another-domain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3001"

# Analytics
ANALYTICS_ENABLED=true
GEOLOCATION_API_KEY="optional-geo-api-key"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-in-production"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Email (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@smartqr.com"
